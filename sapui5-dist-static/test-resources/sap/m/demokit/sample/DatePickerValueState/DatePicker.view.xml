<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="sap.m.sample.DatePickerValueState.DatePicker"
	xmlns="sap.m">
	<FlexBox items="{path: '/modelData'}" direction="Column">
		<VBox class="sapUiTinyMargin" >
			<Label text="{label}" />
			<DatePicker
				width="100%"
				valueState="{valueState}"/>
		</VBox>
	</FlexBox>
</mvc:View>