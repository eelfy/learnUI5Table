<mvc:View
	controllerName="sap.m.sample.ViewSettingsDialog.C"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<Button
			text="Open View Settings Dialog"
			press="handleOpenDialog"
			ariaHasPopup="Dialog" />
		<Button
				text="Open View Settings Dialog in Filter view"
				press="handleOpenDialogFilter"
				ariaHasPopup="Dialog" />
		<Button
				text="Open View Settings Dialog with preselected filters"
				press="handleOpenDialogFilterPreselected"
				ariaHasPopup="Dialog" />
		<Button
				text="Open View Settings Dialog with presetFilterItems"
				press="handleOpenDialogPresetFilterItems"
				ariaHasPopup="Dialog" />
</l:VerticalLayout>
</mvc:View>
