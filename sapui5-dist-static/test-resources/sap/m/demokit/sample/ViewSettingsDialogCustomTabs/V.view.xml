<mvc:View
	controllerName="sap.m.sample.ViewSettingsDialogCustomTabs.C"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<Button
			text="Open View Settings Dialog with several tabs"
			press="handleOpenDialog"
			ariaHasPopup="Dialog" />

		<Button
				text="Open View Settings Dialog with single custom tab"
				press="handleOpenDialogSingleCustomTab"
				ariaHasPopup="Dialog" />
	</l:VerticalLayout>
</mvc:View>
