<View
    xmlns="sap.m"
    xmlns:shell="sap.ushell.ui">
    <Page title="Custom GroupHeaderListItem Control" class="sapUiStdPage sapUiContentPadding">
        <Panel>
            <content>
                <List>
                    <shell:CustomGroupHeaderListItem
                        title="Some title"
                        description="Some description"/>
                    <StandardListItem title="Item 1"/>
                    <StandardListItem title="Item 2"/>
                    <shell:CustomGroupHeaderListItem
                        title="This is a very very very very very very very very very very long title"
                        description="And here is also a very very very very very very very long description which is even longer"/>
                    <StandardListItem title="Item 3"/>
                    <StandardListItem title="Item 4"/>
                    <shell:CustomGroupHeaderListItem
                        title="This header has only a title"/>
                    <StandardListItem title="Item 6"/>
                    <StandardListItem title="Item 7"/>
                    <shell:CustomGroupHeaderListItem
                        description="This header has only a description"/>
                    <StandardListItem title="Item 8"/>
                    <StandardListItem title="Item 9"/>
                    <shell:CustomGroupHeaderListItem
                        title="Some uppercase title"
                        description="Some uppercase description"
                        upperCase="true"/>
                    <StandardListItem title="Item 10"/>
                    <StandardListItem title="Item 11"/>
                </List>
            </content>
        </Panel>
    </Page>
</View>
