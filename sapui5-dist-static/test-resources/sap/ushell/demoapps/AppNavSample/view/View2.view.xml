<core:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    controllerName="sap.ushell.demo.AppNavSample.view.View2">
    <Page title="View2">
        <content>
            <layout:HorizontalLayout>
                <Button text="toView1" press="handleBtn1Press" class="testToView1Btn" />
                <Label
                    width="350px"
                    text="DatePicker long - to test with Islamic Calendar set Date Format 'Islamic Date 1' on FES"
                    tooltip="DatePicker long - to test with Islamic Calendar set Date Format 'Islamic Date 1' on FES"
                    labelFor="DP2" />
                <DatePicker id="DP2" value="2014-03-26" valueFormat="yyyy-MM-dd" displayFormat="long" class="sapUiSmallMarginBottom" />
                <Button id="btnDP2" text="Display Gregorian date" press="handleBtnDP2Press" />
            </layout:HorizontalLayout>
            <layout:HorizontalLayout>
                <Label width="350px" text="DatePicker short" labelFor="DP3" />
                <DatePicker id="DP3" displayFormat="short" />
                <Button id="btnDP3" text="Display Gregorian date" press="handleBtnDP3Press" />
            </layout:HorizontalLayout>
        </content>
    </Page>
</core:View>
