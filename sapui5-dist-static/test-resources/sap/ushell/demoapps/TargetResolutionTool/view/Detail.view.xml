<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    controllerName="sap.ushell.demo.TargetResolutionTool.view.Detail">
    <layout:VerticalLayout width="100%">
        <layout:content>
            <Panel>
                <FlexBox height="auto" alignItems="Center" justifyContent="Center">
                    <items>
                        <VBox>
                            <core:Icon src="sap-icon://stethoscope" size="8em" color="#333" />
                            <Title level="H1" text="Welcome to Target Resolution Tool" />
                            <Label text="Please select a tool from the left menu to get started" />
                        </VBox>
                    </items>
                </FlexBox>
            </Panel>
        </layout:content>
    </layout:VerticalLayout>
</mvc:View>
