<core:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="sap.ushell.demo.ValidateUrlMessagePopoverSample.Main">
    <Page id="myPage" title="MessagePopup Example">
        <headerContent>
            <Button text="Show MessagePopover" press="handleMessagePopoverPress1" />
            <Button text="Show with initiallyExpanded set to false" press="handleMessagePopoverPress3" />
            <Button text="{/messagesLength} Messages" type="Emphasized" press="handleMessagePopoverPress2" />
        </headerContent>
    </Page>
</core:View>
