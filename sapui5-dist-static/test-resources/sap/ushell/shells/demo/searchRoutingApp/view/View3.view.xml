<mvc:View
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="sap.ushell.shells.demo.searchRoutingApp.controller.View3">
	<Page
		title="Selected Items Page"
		showNavButton="true"
		navButtonPress="onToPage2">
		<content>
			<layout:VerticalLayout width="100%">
				<Label text="Selected Items:" labelFor="multiinput"/>
				<MultiInput
					id="multiinput"
					showValueHelp="false"
					tokens="{
						path: '/inputHelpSelectedItems',
						sorter: { path: 'title' }
					}">
					<tokens>
						<Token key="{title}" text="{title}" />
					</tokens>
				</MultiInput>
			</layout:VerticalLayout>
		</content>
	</Page>
</mvc:View>
