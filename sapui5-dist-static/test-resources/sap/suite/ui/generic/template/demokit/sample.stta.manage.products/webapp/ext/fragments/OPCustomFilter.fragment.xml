<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
        xmlns:core="sap.ui.core">
		<DatePicker
			id="CustomFilter-DatePicker"
			placeholder="{i18n|sap.suite.ui.generic.template.ListReport|STTA_C_MP_Product>ST_GENERIC_DATEPICKER_PLACEHOLDER}"
			change="handleChange"
			class="sapUiSmallMarginBottom">

		</DatePicker>
    <Label text="{i18n|sap.suite.ui.generic.template.ListReport|STTA_C_MP_Product>ST_GENERIC_LANGUAGE_FILTER}" labelFor="CustomFilter-Language">
   	<layoutData>
			<OverflowToolbarLayoutData priority="NeverOverflow"/>
		</layoutData>
	 </Label>
    <Select id="CustomFilter-Language" change="onCustomFilterChange">
    	<items>
	        <core:Item key="0" text="{i18n|sap.suite.ui.generic.template.ListReport|STTA_C_MP_Product>ST_GENERIC_ENGLISH_LANGUAGE_FILTER}"/>
	        <core:Item key="1" text="{i18n|sap.suite.ui.generic.template.ListReport|STTA_C_MP_Product>ST_GENERIC_MANDARIN_LANGUAGE_FILTER}"/>
        </items>
         <layoutData>
			<OverflowToolbarLayoutData priority="NeverOverflow"/>
		</layoutData>
    </Select>
     
</core:FragmentDefinition>