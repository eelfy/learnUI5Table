<core:View controllerName="test.sap.ui.comp.valuehelpdialog.ValueHelpDialog"
    xmlns:core="sap.ui.core" 
    xmlns="sap.m"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield" 
    xmlns:smartMultiInput="sap.ui.comp.smartmultiinput" height="100%">
    <smartForm:SmartForm id="smartForm" editable="true" title="Smart Form">
        <smartForm:Group>
            <smartForm:GroupElement>
                <smartMultiInput:SmartMultiInput id="MI" value="{Name}" entitySet="Employees" supportRanges="true" />
                <smartField:SmartField id="SF1" value="{Department}" />
            </smartForm:GroupElement>
        </smartForm:Group>
    </smartForm:SmartForm>
</core:View>