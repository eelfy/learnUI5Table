<core:View xmlns:core="sap.ui.core"
	xmlns:smartField="sap.ui.comp.smartfield"
	controllerName="TextInEditModeSource.controller.SmartFieldTextInEditModeSource"
	xmlns:form="sap.ui.comp.smartform"
	height="100%">
		<form:SmartForm class="editableForm" editable="true" title="TextInEditModeSource">
			<form:Group id="detail" label="Configuration Overview">
				<form:GroupElement>
					<smartField:SmartField class="sapUiMediumMarginBottom" width="60%" id="idProduct" value="{ID}"/>
				</form:GroupElement>
				<form:GroupElement>
					<smartField:SmartField class="sapUiMediumMarginBottom" width="60%" id="idDefault" value="{CategoryID}"/>
				</form:GroupElement>
				<form:GroupElement>
					<smartField:SmartField class="sapUiMediumMarginBottom" width="60%" textInEditModeSource="None" id="idNone" value="{ProductRating}"/>
				</form:GroupElement>
				<form:GroupElement>
					<smartField:SmartField class="sapUiMediumMarginBottom" width="60%" id="idNavProp" textInEditModeSource="NavigationProperty" value="{CategoryID}"/>
				</form:GroupElement>
				<form:GroupElement>
					<smartField:SmartField width="60%" textInEditModeSource="ValueList" id="idValueList" value="{SupplierID}"/>
				</form:GroupElement>
				<form:GroupElement>
					<smartField:SmartField width="60%" textInEditModeSource="ValueList" id="idGuidValueList" value="{CategoryGUID}"/>
				</form:GroupElement>
				<form:GroupElement>
					<smartField:SmartField class="sapUiMediumMarginTop" width="60%" textInEditModeSource="ValueListNoValidation" id="idValueListNoValidation" value="{SupplierIDNoValidation}"/>
				</form:GroupElement>
			</form:Group>
		</form:SmartForm>
</core:View>
