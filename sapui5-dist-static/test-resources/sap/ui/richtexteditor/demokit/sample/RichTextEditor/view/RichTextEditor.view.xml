<mvc:View
	controllerName="sap.ui.richtexteditor.sample.RichTextEditor.controller.RichTextEditor"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<l:VerticalLayout id="idVerticalLayout" class="sapUiContentPadding" width="100%">
		<HBox alignItems="Center">
			<Label text="Select TinyMCE version:" labelFor="idSelect" class="sapUiSmallMarginEnd"/>
			<Select id="idSelect" change="handleSelect">
				<core:Item key="TinyMCE4" text="RichTextEditor with TinyMCE4"/>
				<core:Item key="TinyMCE5" text="RichTextEditor with TinyMCE5"/>
			</Select>
		</HBox>
	</l:VerticalLayout>
</mvc:View>