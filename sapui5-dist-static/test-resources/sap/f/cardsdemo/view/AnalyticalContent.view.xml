<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:w="sap.ui.integration.widgets"
	displayBlock="true">

	<Page title="{i18n>appTitle}">
		<subHeader>
			<Toolbar>
				<ToolbarSpacer />
				<Title text="Analytical Content Card" />
				<ToolbarSpacer />
			</Toolbar>
		</subHeader>

		<Panel>
			<w:Card
				id="lineChart"
				manifest="{manifests>/analyticalContent/line}"
				class="sapUiMediumMargin"
				width="700px" />
			<w:Card
				id="stackedBarChart"
				manifest="{manifests>/analyticalContent/stackedBar}"
				class="sapUiMediumMargin"
				height="500px"
				width="700px" />
			<w:Card
				id="stackedColumnChart"
				manifest="{manifests>/analyticalContent/stackedColumn}"
				class="sapUiMediumMargin"
				height="500px"
				width="700px" />
			<w:Card
				id="donutChart"
				manifest="{manifests>/analyticalContent/donut}"
				class="sapUiMediumMargin"
				height="500px"
				width="700px" />
		</Panel>
	</Page>
</mvc:View>